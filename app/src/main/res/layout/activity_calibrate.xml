<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/place_autocomplete_prediction_secondary_text"
    tools:context="com.tractivity.golf.dk.tractivity.Calibrate">

    <Button
        android:id="@+id/activity_calibrate_save_btn"
        android:layout_width="351dp"
        android:layout_height="122dp"
        android:background="@mipmap/savecal"
        android:text="                           Save Calibration"
        android:textColor="@color/cast_expanded_controller_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_calibrate_stop_button" />

    <Button
        android:id="@+id/activity_calibrate_start_btn2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="351dp"
        android:layout_height="120dp"
        android:background="@mipmap/startcal"
        android:text="                       Start Calibration"
        android:textColorLink="@android:color/holo_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/activity_calibrate_stop_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calibrate_dropdown" />

    <Spinner
        android:id="@+id/calibrate_dropdown"
        android:layout_width="353dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_calibrate_start_btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_calibrate_stop_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="349dp"
        android:layout_height="122dp"
        android:background="@mipmap/stopcal"
        android:text="                       Stop Calibration"
        app:layout_constraintBottom_toTopOf="@+id/activity_calibrate_save_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_calibrate_start_btn2" />
</android.support.constraint.ConstraintLayout>
